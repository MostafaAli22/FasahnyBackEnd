@model IEnumerable<FasahnyBackEnd.Models.Place>

@{
    ViewData["Title"] = "Index";
    ViewBag.Current = "Places"; 
}

<h1>Places Index</h1>

<p> <div class="container text-left">
    <a asp-action="Create" class="btn btn-primary align-right">
        <i class="fa fa-plus-circle" aria-hidden="true"></i> Create New</a>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Thumb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Langtitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IndevidualPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BackagePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
            </td>
           
            <td>
                    <img src="~/Images/@item.Thumb" width="60" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Langtitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndevidualPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BackagePrice)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="btn btn-secondary" asp-action="Details" class="btn-secondary" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-warning" asp-action="Delete" class="btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
